        "恢复药使用上限": {
            "type": "input",
            "label": "恢复药使用上限",
            "description": "设置各类恢复药的使用上限。输入 0 表示不使用，输入 -1 表示无限使用",
            "inputs": [
                {
                    "name": "大行动力恢复药",
                    "label": "大行动力恢复药",
                    "description": "大行动力恢复药的使用上限（0=不使用，-1=无限使用）",
                    "default": "0",
                    "pipeline_type": "int",
                    "verify": "^-?\\d+$",
                    "pattern_msg": "请输入整数（0、-1或正整数）"
                },
                {
                    "name": "小行动力恢复药",
                    "label": "小行动力恢复药",
                    "description": "小行动力恢复药的使用上限（0=不使用，-1=无限使用）",
