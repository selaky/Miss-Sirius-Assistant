        "跑图停止时间": {
            "type": "input",
            "label": "停止时间",
            "description": "当到达此时间时，自动停止跑图任务。使用 24 小时制。",
            "inputs": [
                {
                    "name": "target_hour",
                    "label": "小时",
                    "description": "停止时间的小时部分（0-23）",
                    "default": "23",
                    "pipeline_type": "int",
                    "verify": "^([0-9]|1[0-9]|2[0-3])$",
                    "pattern_msg": "请输入 0-23 之间的整数"
                },
                {
                    "name": "target_minute",
                    "label": "分钟",
                    "description": "停止时间的分钟部分（0-59）",
                    "default": "59",
                    "pipeline_type": "int",
                    "verify": "^([0-9]|[1-5][0-9])$",
                    "pattern_msg": "请输入 0-59 之间的整数"
                }
            ],
            "pipeline_override": {
                "判断达到跑图时限": {
                    "recognition": {
                        "param": {
                            "custom_recognition_param": {
                                "target_hour": "{target_hour}",
