    "interface_version": 2,
    "name": "MSA",
    "label": "MSA",
    "title": "天狼星小助手",
    "description": "MSA 是一款专门为《星纪元》开发的自动化辅助脚本，旨在简化重复操作，提升游戏体验。在此阶段，脚本已实现基础的核心自动化功能。",
    // "contact": "QQ群: 123456789",
    "icon": "./logo.ico",
    "license": "MIT",
    // 填写项目地址和版本号可实现自动更新功能
    "github": "https://github.com/selaky/MSA",
    "version": "0.4.3",
    // Mirror酱为第三方分发服务，新项目默认关闭
    // 若有需要请联系 Mirror酱 开通，直接自行开启是无法使用的
    // "mirrorchyan_rid": "MaaXXX",
    // "mirrorchyan_multiplatform": false,
    "controller": [
        // {
        //     "name": "安卓端",
        //     "type": "Adb",
        //     "display_short_side": 720 // 默认缩放分辨率的短边长度
        // },
        {
            "name": "桌面端",
            "type": "Win32",
            "win32": {
                "class_regex": ".*",
                "window_regex": "StarEra",
                // 截图及控制方式，请根据项目实际情况修改
                // 文档: https://maafw.xyz/docs/2.4-ControlMethods
                "screencap": "FramePool", // 截图方式
                "mouse": "SendMessage", // 鼠标控制方式
                "keyboard": "SendMessageWithCursorPos" // 键盘控制方式
            }
        }
    ],
    "resource": [
        {
            "name": "官服",
            "path": [
                "./resource"
            ]
        }
    ],
    // 可选的 agent 示例
    "agent": {
        "child_exec": "./python/python.exe",
        "child_args": [
            "./agent/main.py"
        ]
    },
    "task": [
        {
            "name": "重置统计数据",
            "entry": "开始重置统计数据",
            "default_check": false,
            "description": "### 每次重启小助手，系统会自动重置统计数据。也可通过执行本任务，在不重启小助手的情况下重置相关数据。",
            "option": [
                "重置吃药数据",
                "重置竞技场数据"
            ]
        },
        {
            "name": "前往指定界面",
            "entry": "开始前往指定界面",
            "default_check": false,
            "description": "### 前往指定的板块页面,例如自动前往星海1或竞技场",
            "option": [
                "目标界面"
            ]
        },
        {
            "name": "跑图",
            "entry": "开始跑图",
            "default_check": true,
            "description": "### 自动进行跑图、战斗和喝药,可设置是否前往下一区或进行战斗。请确保游戏已进入地图界面后再启动任务",
            "option": [
                "自动前往下一区",
                "自动进行战斗",
                "自动使用每日免费回复",
                "恢复药使用上限",
                "升级自动加点",
                "高级设置"
            ]
        },
        {
            "name": "竞技场",
            "entry": "开始竞技场",
            "default_check": false,
            "description": "### 自动在竞技场打满指定分数，支持在战斗结束后切换卡组。请确保游戏已进入竞技场界面后再启动任务",
            "option": [
                "竞技场目标积分",
                "使用星币提升体力",
                "竞技场战斗卡组",
                "使用单独的防御卡组"
            ]
        }
    ],
