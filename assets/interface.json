                            "recognition": {
                                "param": {
                                    "expected": [
                                        "卡组二"
                                    ]
                                }
                            }
                        }
                    }
                },
                {
                    "name": "卡组三",
                    "label": "卡组三",
                    "pipeline_override": {
                        "暴走卡组": {
                            "recognition": {
                                "param": {
                                    "expected": [
                                        "卡组三"
                                    ]
                                }
                            }
                        }
                    }
                },
                {
                    "name": "卡组四",
                    "label": "卡组四",
                    "pipeline_override": {
                        "暴走卡组": {
                            "recognition": {
                                "param": {
                                    "expected": [
                                        "卡组四"
                                    ]
                                }
                            }
                        }
                    }
                }
            ]
        },
        "自动使用每日免费回复": {
            "type": "switch",
            "label": "自动使用每日免费回复",
            "description": "开启后，会自动使用每日免费的行动力和战斗力回复（功能开发中）",
            "default_case": "Yes",
            "cases": [
                {
                    "name": "Yes",
                    "label": "开启",
                    "pipeline_override": {
                        "免费恢复": {
                            "enabled": true
                        }
                    }
                },
                {
                    "name": "No",
                    "label": "关闭",
                    "pipeline_override": {
                        "免费恢复": {
                            "enabled": false
                        }
                    }
                }
            ]
        },
        "恢复药使用上限": {
            "type": "input",
            "label": "恢复药使用上限",
            "description": "设置各类恢复药的使用上限。输入 0 表示不使用，输入 -1 表示无限使用（功能开发中）",
            "inputs": [
                {
                    "name": "大行动力恢复药",
                    "label": "大行动力恢复药",
                    "description": "大行动力恢复药的使用上限（0=不使用，-1=无限使用）",
                    "default": "0",
                    "pipeline_type": "int",
                    "verify": "^-?\\d+$",
                    "pattern_msg": "请输入整数（0、-1或正整数）"
                },
                {
                    "name": "小行动力恢复药",
                    "label": "小行动力恢复药",
                    "description": "小行动力恢复药的使用上限（0=不使用，-1=无限使用）",
                    "default": "0",
                    "pipeline_type": "int",
                    "verify": "^-?\\d+$",
                    "pattern_msg": "请输入整数（0、-1或正整数）"
                },
                {
                    "name": "大战斗力恢复药",
                    "label": "大战斗力恢复药",
                    "description": "大战斗力恢复药的使用上限（0=不使用，-1=无限使用）",
                    "default": "0",
                    "pipeline_type": "int",
                    "verify": "^-?\\d+$",
                    "pattern_msg": "请输入整数（0、-1或正整数）"
                },
                {
                    "name": "小战斗力恢复药",
                    "label": "小战斗力恢复药",
                    "description": "小战斗力恢复药的使用上限（0=不使用，-1=无限使用）",
                    "default": "0",
                    "pipeline_type": "int",
                    "verify": "^-?\\d+$",
                    "pattern_msg": "请输入整数（0、-1或正整数）"
                }
            ],
            "pipeline_override": {
                "初始化吃药数据": {
                    "action": {
                        "param": {
                            "custom_action_param": {
                                "ap_big": "{大行动力恢复药}",
                                "ap_small": "{小行动力恢复药}",
                                "bc_big": "{大战斗力恢复药}",
                                "bc_small": "{小战斗力恢复药}"
                            }
                        }
                    }
                }
            }
        },
        "升级自动加点": {
            "type": "switch",
            "label": "升级自动加点",
            "description": "开启后，角色升级时会自动分配属性点",
            "default_case": "No",
            "cases": [
                {
                    "name": "Yes",
                    "label": "开启",
                    "option": [
                        "属性分配方式"
                    ]
                },
                {
                    "name": "No",
                    "label": "关闭",
                    "pipeline_override": {
                        "分配行动力": {
                            "enabled": false
                        },
                        "分配领导力": {
                            "enabled": false
                        }
                    }
                }
            ]
        },
        "属性分配方式": {
            "type": "select",
            "label": "属性分配方式",
            "description": "选择升级时属性点的分配方式",
            "default_case": "行动力",
            "cases": [
                {
                    "name": "行动力",
                    "label": "全部分配给行动力",
                    "pipeline_override": {
                        "分配行动力": {
                            "enabled": true
                        },
                        "分配领导力": {
                            "enabled": false
                        }
                    }
                },
                {
                    "name": "领导力",
                    "label": "全部分配给领导力",
                    "pipeline_override": {
                        "分配行动力": {
                            "enabled": false
                        },
                        "分配领导力": {
                            "enabled": true
                        }
                    }
                }
            ]
        },
        "竞技场目标积分": {
            "type": "input",
            "label": "目标积分",
            "description": "达到目标积分后，停止竞技场任务",
            "inputs": [
                {
                    "name": "目标积分",
                    "label": "目标积分",
                    "description": "达到目标积分后停止任务",
                    "default": "100",
                    "pipeline_type": "int",
                    "verify": "^[1-9]\\d*$",
                    "pattern_msg": "请输入正整数"
                }
            ],
            "pipeline_override": {
                "初始化竞技场数据": {
                    "action": {
                        "param": {
                            "custom_action_param": {
                                "target_points": "{目标积分}"
                            }
                        }
                    }
                }
            }
        },
        "使用星币提升体力": {
            "type": "switch",
            "label": "使用星币提升体力",
            "description": "开启后，每次战斗前自动使用星币提升体力",
            "default_case": "Yes",
            "cases": [
                {
                    "name": "Yes",
                    "label": "开启",
                    "pipeline_override": {
