                                "ap_big": "{大行动力恢复药}",
                                "ap_small": "{小行动力恢复药}",
                                "bc_big": "{大战斗力恢复药}",
                                "bc_small": "{小战斗力恢复药}",
                                "free_recover": false
                            }
