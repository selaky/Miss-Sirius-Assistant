    "interface_version": 2,
    "name": "MSA",
    "label": "MSA",
    "title": "天狼星小助手",
    "description": "Miss Sirius Assistant (MSA) 是一款专门为《星纪元》开发的自动化辅助脚本，旨在简化重复操作，提升游戏体验。在此阶段，脚本已实现基础的核心自动化功能。",
    // "contact": "QQ群: 123456789",
    "icon": "./logo.ico",
    "license": "MIT",
    // 填写项目地址和版本号可实现自动更新功能
    "github": "https://github.com/selaky/Miss-Sirius-Assistant",
    "version": "0.5.0",
    // Mirror酱为第三方分发服务，新项目默认关闭
    // 若有需要请联系 Mirror酱 开通，直接自行开启是无法使用的
    // "mirrorchyan_rid": "MaaXXX",
    // "mirrorchyan_multiplatform": false,
    "controller": [
        // {
        //     "name": "安卓端",
        //     "type": "Adb",
        //     "display_short_side": 720 // 默认缩放分辨率的短边长度
        // },
        {
            "name": "桌面端",
            "type": "Win32",
            "win32": {
                "class_regex": ".*",
                "window_regex": "StarEra",
                // 截图及控制方式，请根据项目实际情况修改
                // 文档: https://maafw.xyz/docs/2.4-ControlMethods
                "screencap": "FramePool", // 截图方式
                "mouse": "SendMessage", // 鼠标控制方式
                "keyboard": "SendMessageWithCursorPos" // 键盘控制方式
            }
        }
    ],
    "resource": [
        {
            "name": "官服",
            "path": [
                "./resource"
            ]
        }
    ],
    // 可选的 agent 示例
    "agent": {
        "child_exec": "./python/python.exe",
        "child_args": [
            "./agent/main.py"
        ]
    },
    "task": [
        {
            "name": "跑图战斗设置",
            "entry": "开始战斗设置",
            "default_check": true,
            "description": "### 战斗策略配置\n用于设置跑图遇到感染者时的应对方式。\n若不清楚如何配置，请**始终勾选此任务并将其置顶**。",
            "option": [
                "一般感染者",
                "天狼星",
                "放生",
                "公屏广播"
            ]
        },
        {
            "name": "重置统计数据",
            "entry": "开始重置统计数据",
            "default_check": false,
            "description": "### 每次重启小助手，系统会自动重置统计数据。也可通过执行本任务，在不重启小助手的情况下重置相关数据。",
            "option": [
                "重置吃药数据",
                "重置竞技场数据",
                "重置战斗信息",
                "重置BOSS数据"
            ]
        },
        {
            "name": "前往指定界面",
            "entry": "开始前往指定界面",
            "default_check": false,
            "description": "### 前往指定的地图界面",
            "option": [
                "地图类型"
            ]
        },
        {
            "name": "跑图",
            "entry": "开始跑图",
            "default_check": true,
            "description": "### 自动进行跑图、战斗和喝药,可设置是否前往下一区或进行战斗。请确保游戏已进入地图界面后再启动任务",
            "option": [
                "自动前往下一区",
                "自动进行战斗",
                "恢复药使用上限",
                "自动使用每日免费回复",
                "升级自动加点",
                "设定停止时间"
            ]
        },
        {
            "name": "实验室",
            "entry": "开始实验室",
            "default_check": false,
            "description": "### 自动将卡牌批量放入实验室分解",
            "option": [
                "一般卡牌",
                "实验天狼星"
            ]
        },
        {
            "name": "竞技场",
            "entry": "开始竞技场",
            "default_check": false,
            "description": "### 在竞技场打满指定分数并统计胜率，支持在全部战斗结束后自动更换弱卡组(需设置),再也不怕忘切卡组了",
            "option": [
                "竞技场目标积分",
                "使用星币提升体力",
                "竞技场战斗卡组",
                "使用单独的防御卡组"
            ]
        },
        {
            "name": "世界BOSS",
            "entry": "开始世界BOSS",
            "default_check": false,
            "description": "### 可自动到点打世界 boss。\n**注意：自动操作有风险，可能会出现程序卡死、网络波动、操作缓慢等情况，本功能更适合咸鱼/挂机党使用此功能混奖励。如果要冲排名,请做好人工接管准备.**",
            "option": [
                "BOSS战斗设置",
                "BOSS战斗卡组",
                "BOSS吃药类型",
                "BOSS强制截止时间"
            ]
        }
    ],
