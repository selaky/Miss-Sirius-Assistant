{
    // 本文件主要定义了通用 UI 的行为和显示内容
    // 可参考文档和示例添加更多您需要的功能
    // 文档：https://maafw.xyz/docs/3.3-ProjectInterfaceV2
    // 示例：https://github.com/MaaXYZ/MaaFramework/blob/main/sample/interface.json
    "interface_version": 2,
    "name": "MSA",
    "label": "MSA",
    "title": "天狼星小助手",
    "description": "MSA 是一款专门为《星纪元》开发的自动化辅助脚本，旨在简化重复操作，提升游戏体验。在此阶段，脚本已实现基础的核心自动化功能。",
    // "contact": "QQ群: 123456789",
    "icon": "./logo.ico",
    "license": "MIT",
    // 填写项目地址和版本号可实现自动更新功能
    "github": "https://github.com/selaky/MSA",
    "version": "0.3.0",
    // Mirror酱为第三方分发服务，新项目默认关闭
    // 若有需要请联系 Mirror酱 开通，直接自行开启是无法使用的
    // "mirrorchyan_rid": "MaaXXX",
    // "mirrorchyan_multiplatform": false,
    "controller": [
        // {
        //     "name": "安卓端",
        //     "type": "Adb",
        //     "display_short_side": 720 // 默认缩放分辨率的短边长度
        // },
        {
            "name": "桌面端",
            "type": "Win32",
            "win32": {
                "class_regex": ".*",
                "window_regex": "StarEra",
                // 截图及控制方式，请根据项目实际情况修改
                // 文档: https://maafw.xyz/docs/2.4-ControlMethods
                "screencap": "FramePool", // 截图方式
                "mouse": "SendMessage", // 鼠标控制方式
                "keyboard": "SendMessageWithCursorPos" // 键盘控制方式
            }
        }
    ],
    "resource": [
        {
            "name": "官服",
            "path": [
                "./resource"
            ]
        }
    ],
    // 可选的 agent 示例
    "agent": {
        "child_exec": "./python/python.exe",
        "child_args": [
            "./agent/main.py"
        ]
    },
    "task": [
        {
            "name": "跑图",
            "entry": "开始跑图",
            "default_check": true,
            "option": [
                "自动前往下一区",
                "自动进行战斗",
                "自动使用每日免费回复",
                "恢复药使用上限",
                "升级自动加点"
            ]
        },
        {
            "name": "竞技场",
            "entry": "开始竞技场",
            "default_check": false,
            "option": [
                "竞技场目标积分",
                "使用星币提升体力",
                "竞技场战斗卡组",
                "使用单独的防御卡组"
            ]
        }
    ],
    "option": {
        "自动前往下一区": {
            "type": "switch",
            "label": "自动前往下一区",
            "description": "开启后，跑图时会自动点击【下一区】按钮前往下一个区域",
            "default_case": "Yes",
            "cases": [
                {
                    "name": "Yes",
                    "label": "开启",
                    "pipeline_override": {
                        "下一区": {
                            "enabled": true
                        },
                        "地图探索完毕": {
                            "enabled": true
                        }
                    }
                },
                {
                    "name": "No",
                    "label": "关闭",
                    "pipeline_override": {
                        "下一区": {
                            "enabled": false
                        },
                        "地图探索完毕": {
                            "enabled": false
                        }
                    }
                }
            ]
        },
        "自动进行战斗": {
            "type": "switch",
            "label": "自动进行战斗",
            "description": "开启后，遇到战斗会自动选择卡组进行战斗。关闭后，遇到战斗会自动点击【放弃】按钮",
            "default_case": "Yes",
            "cases": [
                {
                    "name": "Yes",
                    "label": "开启",
                    "option": [
                        "普通感染者卡组",
                        "暴走感染者卡组"
                    ],
                    "pipeline_override": {
                        "放弃战斗": {
                            "enabled": false
                        }
                    }
                },
                {
                    "name": "No",
                    "label": "关闭（自动放弃战斗）",
                    "pipeline_override": {
                        "放弃战斗": {
                            "enabled": true
                        }
                    }
                }
            ]
        },
        "普通感染者卡组": {
            "type": "select",
            "label": "普通感染者卡组",
            "description": "遇到普通感染者时使用的卡组",
            "default_case": "卡组二",
            "cases": [
                {
                    "name": "卡组一",
                    "label": "卡组一",
                    "pipeline_override": {
                        "普通卡组": {
                            "recognition": {
                                "param": {
                                    "expected": [
                                        "卡组一"
                                    ]
                                }
                            }
                        }
                    }
                },
                {
                    "name": "卡组二",
                    "label": "卡组二",
                    "pipeline_override": {
                        "普通卡组": {
                            "recognition": {
                                "param": {
                                    "expected": [
                                        "卡组二"
                                    ]
                                }
                            }
                        }
                    }
                },
                {
                    "name": "卡组三",
                    "label": "卡组三",
                    "pipeline_override": {
                        "普通卡组": {
                            "recognition": {
                                "param": {
                                    "expected": [
                                        "卡组三"
                                    ]
                                }
                            }
                        }
                    }
                },
                {
                    "name": "卡组四",
                    "label": "卡组四",
                    "pipeline_override": {
                        "普通卡组": {
                            "recognition": {
                                "param": {
                                    "expected": [
                                        "卡组四"
                                    ]
                                }
                            }
                        }
                    }
                }
            ]
        },
        "暴走感染者卡组": {
            "type": "select",
            "label": "暴走感染者卡组",
            "description": "遇到暴走感染者时使用的卡组",
            "default_case": "卡组三",
            "cases": [
                {
                    "name": "卡组一",
