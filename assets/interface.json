        "竞技场战斗卡组": {
            "type": "select",
            "label": "战斗卡组",
            "description": "在竞技场战斗时使用的卡组",
            "default_case": "卡组4",
            "cases": [
                {
                    "name": "卡组1",
                    "label": "卡组1",
